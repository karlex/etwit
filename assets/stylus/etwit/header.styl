header {
	background: #fff
	box-shadow: 0px 1px 0px 0px #ccc
	height: 135px
	margin-bottom: 30px
	z-index: 2

	.header-holder {
		height: 100%
		padding: 30px 0 0 0

		.user-holder, .menu-holder, .logo {
			display: inline-block
			height: 100%
			overflow: hidden
			vertical-align: middle
			white-space: nowrap
		}

		.user-holder {
			margin-right: 20px
			width: 335px

			.avatar {
				border-radius: 100%
				display: inline-block
				margin-right: 20px
				overflow: hidden
				height: 80px
				width: 80px
				cursor: pointer
			}

			.user-info {
				display: inline-block
				font-weight: 500
				vertical-align: top

				.name {
					font-size: 21px
					line-height: 120%
					margin: 10px 0
					overflow: hidden
					position: relative
					white-space: nowrap

					&.last {
						display: inline-block
					}
				}

				.email {
					color: mainColor

					.exit {
						cursor: pointer
						color: #999
						font-size: 80%
						margin-left: 12px
					}
				}

				.badge-info {
					background: url('/img/icon-bubble.svg') transparent 50% 50% no-repeat
					display: inline-block
					font-size: 16px
					height: 24px
					margin-left: 10px
					// position: absolute
					text-align: center
					// top: -10px
					// right: -25px
					width: 24px
					
					a {
						color: #fff
					}
				}
			}
		}

		.menu-holder {
			margin-right: 20px
			width: 425px

			ul {
				list-style: none
				margin: 0
				padding: 0
				
				li {
					display: inline-block
					font-size: 21px
					line-height: 75px // 105px + 30px padding-top - 30px padding-top

					a {
						border-radius: 5px
						color: mainColor
						padding: 12px 20px

						&.active {
							background-color: mainColor
							color: #fff
						}
					}

					&.tweet {
						margin-right: 35px

						a {
							padding: 0

							img {
								height: 24px
								width: 25px
							}
						}
					}
				}
			}
		}

		.logo {
			line-height: 75px
			text-align: right
			width: 160px
		}
	}
}